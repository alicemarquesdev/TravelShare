<!DOCTYPE html>
<html lang="pt-br" class="p-0 m-0">

<head>
    <!-- Meta tags para charset e viewport -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <!-- Título da página -->
    <title>TravelShare</title>

    <!-- Font Awesome icons (versão gratuita) -->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Saira+Extra+Condensed:wght@500;700&family=Muli:wght@400;400i;800;800i&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i" rel="stylesheet" type="text/css" />

    <!-- Bootstrap Icons CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- jQuery UI CSS -->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

    <!-- Tema principal (inclui o Bootstrap) -->
    <link href="~/css/styles.css" rel="stylesheet" />
</head>

<body class="pt-4" id="page-top">

    <!-- Token CSRF disponível para todas as views que utilizam esse layout -->
    @Html.AntiForgeryToken()

    <!-- Navegação (menu lateral) -->
    @await Component.InvokeAsync("Menu")

    <!-- Conteúdo principal da página -->
    <main role="main" class="bg-white">
        <!-- Exibe mensagens temporárias, como alertas -->
       
        @if (TempData["Message"] != null)
        {
            <div class="container alert alert-dark alert-dismissible fade show d-flex align-items-center" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close btn-close-dark close-alert ms-auto p-3" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Corpo do conteúdo que será renderizado nas views -->
        @RenderBody()
    </main>

    <!-- Scripts (ordem recomendada) -->
    <!-- jQuery (sempre antes do Bootstrap JS) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- jQuery UI (para componentes como autocomplete e outros) -->
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>

    <!-- Bootstrap JS Bundle (inclui Popper.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Validação do formulário com jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

    <!-- Scripts personalizados -->
    <script src="~/js/scripts.js"></script>
    <script src="~/js/comentario.js"></script>
    <script src="~/js/seguidor.js"></script>
    <script src="~/js/curtida.js"></script>

    <!-- Seção para scripts adicionais, se houver -->
    @RenderSection("scripts", required: false)

</body>

</html>
