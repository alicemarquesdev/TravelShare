<!DOCTYPE html>
<html lang="pt-br">

<head>
    <!-- Meta tags -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <!-- Título da página -->
    <title>TravelShare</title>

    <!-- Font Awesome icons -->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- Estilo personalizado para layout deslogado -->
    <link href="~/css-deslogado/styles.css" rel="stylesheet" />
</head>

<body class="bg-white">

    <!-- Token CSRF disponível para todas as views que utilizam esse layout -->
    @Html.AntiForgeryToken()

    <!-- Navegação fixa no topo -->
    <nav class="navbar bg-dark fixed-top mb-lg-5" style="height: 60px; padding: 0 20px;">
        <h3 class="text-white text-start py-3 ms-5">TravelShare</h3>
    </nav>

    <!-- Layout de autenticação -->
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main class="mt-5 pt-2">
                <!-- Exibição de mensagens temporárias -->
                @if (TempData["Message"] != null)
                {
                    <div class="container alert alert-dark alert-dismissible fade show d-flex align-items-center" role="alert">
                        @TempData["Message"]
                        <button type="button" class="btn-close btn-close-dark close-alert ms-auto p-3" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <!-- Corpo principal da página -->
                @RenderBody()
            </main>
        </div>

        <!-- Rodapé -->
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-dark mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; TravelShare 2025</div>
                        <div>
                            <a class="text-secondary" href="#">Privacy Policy</a>
                            &middot;
                            <a class="text-secondary" href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <!-- Bootstrap JS Bundle (inclui o Popper.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- jQuery Validation -->
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.0.0/dist/jquery.validate.unobtrusive.min.js"></script>

    <!-- Scripts personalizados -->
    <script src="~/js-deslogado/scripts.js"></script>

    <!-- Seção para scripts adicionais, se houver -->
    @RenderSection("scripts", required: false)
</body>

</html>
